<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    tools:context="com.example.photoeditor.presentation.activities.CardControl.CardControlPermissions">>

    <android.support.v7.widget.CardView
        android:id="@+id/CardPermissions"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/permissionsTextF"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/typeTextF"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/permissionsTextF"
                android:layout_toRightOf="@+id/permissionsTextF" />

            <TextView
                android:id="@+id/parameterTextF"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/typeTextF"
                android:layout_toRightOf="@+id/typeTextF" />

            <Switch
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/parameterTextF"
                android:layout_toRightOf="@+id/parameterTextF"
                android:text="Status" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>