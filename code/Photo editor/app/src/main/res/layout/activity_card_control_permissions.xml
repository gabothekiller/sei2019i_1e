<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    tools:context="com.example.photoeditor.presentation.activities.CardControl.CardControlPermissions">>

    <android.support.v7.widget.CardView
        android:id="@+id/CardPermissions"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/parameterTextF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp" />

            <Switch
                android:id="@+id/statusPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/parameterTextF"
                android:layout_toRightOf="@+id/parameterTextF"
                android:text="Paid" />

            <Switch
                android:id="@+id/statusRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="36dp"
                android:layout_toEndOf="@+id/statusPaid"
                android:layout_toRightOf="@+id/statusPaid"
                android:text="Regular" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>